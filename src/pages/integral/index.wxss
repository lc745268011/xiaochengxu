/* pages/integral/index.wxss */

.top {
  height: 120rpx;
  line-height: 120rpx;
  background: #fff;
  margin-bottom: 20rpx;
}

.top .l {
  font-size: 32rpx;
}

.top .r {
  font-size: 36rpx;
  font-weight: bold;
  color: #23ade5;
}

.top .r text {
  font-size: 28rpx;
}

.productList {
  background: #fff;
  padding: 38rpx 30rpx;
}

.productList view.center {
  font-size: 28rpx;
  margin-bottom: 38rpx;
}

.productList view.center text {
  color: #23ade5;
}

.productList .yhList {
  width: 334rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.productList .yhList:nth-child(2n) {
  margin-right: 0;
}

.productList .yhList .bottom {
  border: 1px solid #ccc;
  border-top: 0;
  padding: 20rpx;
}

.productList .yhList>view:first-child, .productList .yhList view image {
  width: 334rpx;
  height: 334rpx;
}

.productList .yhList .title {
  font-size: 30rpx;
  color: #333;
  /* overflow: hidden; */
  /* text-overflow: ellipsis; */
  /* display: -webkit-box; */
  /* -webkit-line-clamp: 2; */
  /* -webkit-box-orient: vertical; */
  margin-bottom: 20rpx;
   /* height: 80rpx;  */
}

.productList .yhList .money {
  position: relative;
}

.productList .yhList .money .l>view:first-child {
  font-size: 22rpx;
  color: #ccc;
  position: relative;
}

.productList .yhList .money .l>view:last-child {
  font-size: 30rpx;
  color: #23ade5;
  font-weight: bold;
}

.productList .yhList .money .line {
  width: 100%;
  height: 2rpx;
  background: #ccc;
}

.productList .yhList .money .buyBtn, .productList .yhList .money .hBuyBtn {
  border: 1px solid #23ade5;
  width: 94rpx;
  height: 44rpx;
  text-align: center;
  line-height: 44rpx;
  color: #23ade5;
  border-radius: 8rpx;
}

.productList .yhList .money .r {
  position: absolute;
  bottom: 0;
  right: 0;
}
.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 334rpx;
  margin-right:20rpx;

}
.right{margin-right: 0}