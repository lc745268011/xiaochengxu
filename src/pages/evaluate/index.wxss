/* pages/evaluate/index.wxss */
.star-image {
  position: relative;
  /* top: 50rpx; */
  width: 40rpx;
  height: 40rpx;
   src: '/img/stars-1.png';
  top:10rpx;

}

.item {
  position: absolute;
  top:0;
  width: 20rpx;
  height: 40rpx;
}
 .p_picker ,.star{height: 120rpx;width: 100%;box-sizing: border-box;background: #fff;border-bottom: 1px solid #efefef}
.p_picker .l,.p_picker .r,.star .l,.star .r{height: 120rpx;line-height: 120rpx;width: 50%} 
.p_picker .r{text-align: right}
.star .r{width: 280rpx;}
.content .title{height: 100rpx;line-height: 100rpx;padding:0 30rpx;width: 100%;box-sizing: border-box}
.content .text{width: 100%;padding: 30rpx;box-sizing: border-box;background: #fff}
.content .text textarea{width: 100%;min-height: 200rpx;}
.subBtn{position: fixed;bottom:0;width: 100%;height: 96rpx;line-height: 96rpx;color: #fff;background: #23ade5;text-align: center;font-size: 32rpx;}