<!--pages/card/index.wxml-->
<view class='vipCard'>
  <image src='/img/vipCard.png'></image>
  <view class='no'>NO.000001</view>
</view>
<view class='receive'>
  <button>领取会员卡</button>
</view>
<view>
  <block wx:for="{{card}}" wx:key="id">
    <view bindtap='slideBox' class='title' id='{{item.id}}' data-status="{{item.slideStatus}}">{{item.title}}</view>
    <view class="{{item.slideStatus == false ? 'hide slideup' : 'slide slidedown'}}">{{item.con}}</view>
  </block>
</view>